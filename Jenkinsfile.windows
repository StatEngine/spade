#!/usr/bin/groovy

node('windows') {
  def root = pwd()

  stage('Setup') {
    git url: 'https://github.com/StatEngine/spade', branch: 'master'
  }

  stage('Archive') {
    withEnv(["ARTIFACT_BUCKET=\$ARTIFACT_BUCKET"]) {
    bat """
      dir
      clean-package.sh
      dir

      set ARTIFACT=releases\\setup.exe

      call bin\\s3Push.bat
    """
    }
  }
}
